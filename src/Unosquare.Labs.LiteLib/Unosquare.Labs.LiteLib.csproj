<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A cool little wrapper for SQLite based on Dapper.</Description>
    <AssemblyTitle>LiteLib</AssemblyTitle>
    <VersionPrefix>0.12.1</VersionPrefix>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Unosquare.Labs.LiteLib</AssemblyName>
    <PackageId>Unosquare.Labs.LiteLib</PackageId>
    <DebugType>Full</DebugType>
    <CodeAnalysisRuleSet>..\..\StyleCop.Analyzers.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Dapper" Version="1.50.2" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="2.0.0" />
    <PackageReference Include="Unosquare.Swan" Version="0.12.0" />
  </ItemGroup>

</Project>
